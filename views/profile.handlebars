      <div class="col-md-8">
        <h6>{{submission.name}}</h6>
        <br>
        <p>{{submission.description}}</p>
        <br>
        <a href="{{submission.website}}" target="_blank">{{submission.website}}</a>
        <hr class="solid">
      </div>
