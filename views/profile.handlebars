<form id="postForm">
        <div class="row">
            <div class="medium-6 medium-push-3 columns">
                <label>New Post Name:</label>
                <textarea id="postName" class="newPost" placeholder="Your New Post Here"></textarea>
                <br>
                <label>New Post Description:</label>
                <textarea id="postDescription" class="newPost" placeholder="Your New Post Here"></textarea>
                <br>
                <label>New Post Website:</label>
                <textarea id="postWebsite" class="newPost" placeholder="Your New Post Here"></textarea>
                <div class="row">
            <div class="medium-6 medium-push-3 columns">
                <button type="submit" class="button" id="button">New Recommendations</button>
            </div>
        </div>
            </div>
        </div>
    </form>
    <div class="bg-image"></div>
{{#if submissions.length}}
  <div id="posts">
    <h3>Current Posts:</h3>

    {{#each submissions as |submission|}}
